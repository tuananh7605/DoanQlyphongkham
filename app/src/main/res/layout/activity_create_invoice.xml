<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:clipToPadding="false">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Quay lại"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#E45D5D"
            android:textColor="@android:color/white"
            android:padding="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo hóa đơn"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edtTenBenhNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên bệnh nhân"
            android:inputType="textPersonName"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edtNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày sinh (dd/MM/yyyy)"
            android:inputType="date"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edtSDTBenhNhan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edtKhoaKham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Khoa khám"
            android:inputType="text"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edtTinhTrang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tình trạng bệnh"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:layout_marginBottom="10dp" />

        <!-- Ngày tạo: dùng DatePicker -->
        <EditText
            android:id="@+id/edtNgayTao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày tạo hóa đơn (yyyy-MM-dd)"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:layout_marginBottom="10dp" />

        <EditText
            android:id="@+id/edtTongTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tổng tiền"
            android:inputType="numberDecimal"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btnLuuHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu hóa đơn"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
