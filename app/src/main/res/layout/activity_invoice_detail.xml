<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/tvDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên: " />

        <TextView android:id="@+id/tvDetailBirthDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: " />

        <TextView android:id="@+id/tvDetailPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SĐT: " />

        <TextView android:id="@+id/tvDetailGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giới tính: " />

        <TextView android:id="@+id/tvDetailDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khoa khám: " />

        <TextView android:id="@+id/tvDetailCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tình trạng: " />

        <TextView android:id="@+id/tvDetailExamNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số khám: " />

        <TextView android:id="@+id/tvDetailTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: " />

        <Button
            android:id="@+id/btnDeleteInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa hóa đơn"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnPrintInvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In hóa đơn"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>