<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:layout_marginBottom="8dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvTenBenhNhan"
        android:text="Tên bệnh nhân"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNgaySinh"
        android:text="Ngày sinh"
        android:textColor="#444444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSDT"
        android:text="Số điện thoại"
        android:textColor="#444444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvKhoa"
        android:text="Khoa khám"
        android:textColor="#444444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTinhTrang"
        android:text="Tình trạng bệnh"
        android:textColor="#444444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNgayTao"
        android:text="Ngày tạo hóa đơn"
        android:textColor="#444444"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvTongTien"
        android:text="Tổng tiền"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Nhóm nút XÓA và IN nằm ngang -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="4dp">

        <Button
            android:id="@+id/btnIn"
            android:text="IN"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnXoa"
            android:text="XÓA"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="#FF4444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>