<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.QuanLyKhoa_SuaActivity">

    <ScrollView
        android:id="@+id/screens"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="0dp"
            android:gravity="left"
            android:orientation="vertical">

            <EditText
                android:id="@+id/themlophocphan_textbox_tenKhoa"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:ems="15"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:hint="Tên Khoa Khám:"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/themlophocphan_textbox_giatienKhoa"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="15"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:hint="Giá Tiền:"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/themKhoa_textbox_MoTa"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_marginTop="100dp"
                android:ems="15"
                android:gravity="top"
                android:hint="Mô Tả:"
                android:textSize="18dp" />
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/thongtinlophocphan_button_luu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="155dp"
        android:layout_marginRight="26dp"
        android:clickable="true"
        android:backgroundTint="@color/colorAccent"
        app:srcCompat="@drawable/baseline_save_24" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/thongtinlophocphan_button_xoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="26dp"
        android:clickable="true"
        android:backgroundTint="@color/colorAccent"
        app:srcCompat="@drawable/outline_auto_delete_24" />

</FrameLayout>